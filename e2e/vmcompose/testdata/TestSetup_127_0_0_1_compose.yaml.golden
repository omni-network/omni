version: '2.4'
networks:
  test:
    labels:
      e2e: true
    driver: bridge

services:
  validator01:
    labels:
      e2e: true
    container_name: validator01
    image: omniops/halo:7d1ae53
    init: true
    ports:
    - 26656:26656
    - 26657:26657
    - 6060
    environment:
    - HALO_LOG_FORMAT=logfmt
    volumes:
    - ./validator01:/halo
    depends_on:
      validator01_evm:
        condition: service_healthy
    networks:
      test:
        


  # Use geth as the omni EVMs.
  # Initialises geth files and folder from provided genesis file.
  validator01_evm-init:
    labels:
      e2e: true
    container_name: validator01_evm-init
    image: "ethereum/client-go:v1.13.14"
    command: --state.scheme=path --datadir=/geth init /geth/genesis.json
    volumes:
      - ./validator01_evm:/geth
    networks:
      test:

  validator01_evm:
    labels:
      e2e: true
    container_name: validator01_evm
    image: "ethereum/client-go:v1.13.14"
    command:
      - --config=/geth/config.toml
      # Flags not available via config.toml
      - --nat=extip:<nil>
      - --metrics
      
    ports:
      - 8551:8551
      - 8545:8545
      - 30303:30303
      - 8546
      - 6060
    depends_on:
      validator01_evm-init:
        condition: service_completed_successfully
    healthcheck:
      test: "nc -z localhost 8545"
      interval: 1s
      retries: 30
    volumes:
      - ./validator01_evm:/geth
    networks:
      test:
        

